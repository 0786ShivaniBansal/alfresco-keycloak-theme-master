Flow me.gluu.agama.reset_password
  Basepath ""
  creds = RRF "reset_password_form.ftlh"
  user = Call co.sample#findUserByUsername creds.username
  isBob = Call co.PersonChecker#isBob creds.username
  When isBob is true
    Log "@error Alert: Bob tried to reset password"
    Finish false
  When user is not null
    token = Call co.sample#generatePasswordResetToken user
    tokenLink = Call co.sample#buildPasswordResetLink token
    SendEmail user.email "Password Reset Link" "Click the link to reset your password: " + tokenLink
  Finish true
Finish